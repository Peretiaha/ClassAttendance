@model ClassAttendance.Web.ViewModels.SubjectViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>SubjectViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfLesson" class="control-label"></label>
                <input asp-for="NumberOfLesson" class="form-control" />
                <span asp-validation-for="NumberOfLesson" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedTeacher" class="control-label"></label>
                @Html.DropDownListFor(x => x.SelectedTeacher, Model.Teachers, "Select teacher for this subject", new { @class = "btn btn-secondary dropdown-toggle" })
                <span asp-validation-for="SelectedTeacher" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="EducationalInstitutionId" />
                <input type="hidden" asp-for="SubjectId" />
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
