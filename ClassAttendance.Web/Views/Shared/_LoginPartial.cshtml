
@using (Html.BeginForm("LogoutAsync", "Account", FormMethod.Post, new { id = "logoutForm", @class = "nav-item" }))
{
    @if (User.Identity.IsAuthenticated)
    {
        <li nav-item><a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link">Logout</a></li>
    }

    else
    {
        <li nav-item>@Html.ActionLink("Sign in", "LoginAsync", "Account", null, new { @class = "nav-link", id = "loginLink" })</li>
    }
}