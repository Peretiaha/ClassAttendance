@using ClassAttendance.Models.Enums
@model ClassAttendance.Web.ViewModels.EducationalInstitutionViewModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>EducationalInstitutionViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Country" name="@nameof(Model.Type)" asp-items="Html.GetEnumSelectList<EducationalInstitutionType>()" class="btn btn-secondary dropdown-toggle"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <select asp-for="Country" name="@nameof(Model.Country)" asp-items="Html.GetEnumSelectList<Country>()" class="btn btn-secondary dropdown-toggle"></select>
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
            
            <input type="hidden" asp-for="EducationalInstitutionId">
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
