@using ClassAttendance.Web
@using Microsoft.AspNetCore.Mvc.Localization
@model ClassAttendance.Web.ViewModels.GroupViewModel
@inject IHtmlLocalizer<SharedResource> SharedResource

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>GroupViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedEducationalInstitution" class="control-label"></label>
                @Html.DropDownListFor(x=>x.SelectedEducationalInstitution, Model.EducationalInstitutions, SharedResource["Select your Educational Institution"].Value, new {@class="btn btn-secondary dropdown-toggle"})
                <span asp-validation-for="SelectedEducationalInstitution" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@SharedResource["Create"]" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">@SharedResource["Back"]</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
